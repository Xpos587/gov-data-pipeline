## Файл окружения (шаблон)
## Скопируйте в .env и замените значения

#=======================================
# FTP-сервер
#=======================================
FTP_HOST=127.0.0.1
FTP_PORT=21
FTP_USER=ftp
FTP_PASSWD=default_pass  # Замените на реальный пароль
FTP_REMOTE_DIR=/

#=======================================
# OpenAI API
#=======================================
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=default_key        # Ваш API-ключ OpenAI
OPENAI_IMAGE_MODEL=gpt-4o
OPENAI_BRAND_MODEL=gpt-4o-mini
OPENAI_CORRECT_MODEL=gpt-4o-mini

#=======================================
# Настройки для Беларуси
# Пример прокси: http://user:pass@proxy.example.com:3128
#=======================================
BELARUS_ENABLED=true
BELARUS_USER_AGENT=BelarusHandler/1.0
BELARUS_CORRECTION=false
# BELARUS_PROXY: "http://proxy:port" # Прокси без авторизации
# BELARUS_PROXY: "http://user:pass@proxy:port" # Прокси с авторизацией
# BELARUS_PROXY=                           # Необязательно

#=======================================
# Настройки для Казахстана
#=======================================
KAZAKHSTAN_ENABLED=true
KAZAKHSTAN_USER_AGENT=KazakhstanHandler/1.0
KAZAKHSTAN_CORRECTION=false
# KAZAKHSTAN_PROXY=                        # Необязательно

#=======================================
# Настройки для Кыргызстана
#=======================================
KYRGYZSTAN_ENABLED=true
KYRGYZSTAN_USER_AGENT=KyrgyzstanHandler/1.0
KYRGYZSTAN_CORRECTION=false
# KYRGYZSTAN_PROXY=                        # Необязательно

